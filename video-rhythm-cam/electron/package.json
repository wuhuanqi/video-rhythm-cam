{
  "name": "video-rhythm-cam",
  "version": "2.0.0",
  "description": "Video Rhythm Cam - 让视频随音乐律动",
  "main": "electron.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.video-rhythm-cam",
    "productName": "Video Rhythm Cam",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron.js",
      "python-api/**/*",
      "web/build/**/*",
      "web/node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.video"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
